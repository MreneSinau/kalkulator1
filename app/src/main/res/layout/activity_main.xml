<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrenesinau.kalkulator1.MainActivity">

    <TextView
        android:id="@+id/txthasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Angka Pertama"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtAngkaPertama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363" />

    <EditText
        android:id="@+id/txtAngkaPertama"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:text="Angka Ke Dua"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtAngkaKedua"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txtAngkaKedua"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txthasil" />

    <Button
        android:id="@+id/btnTambah"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txthasil"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnkurang"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txthasil"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnTambah"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/tbnKali"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="X"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txthasil"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btnBagi"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnkurang"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.509" />

    <Button
        android:id="@+id/btnBagi"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txthasil"
        app:layout_constraintRight_toLeftOf="@+id/btnHapus"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btnHapus"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="C"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txthasil"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
